{
  "name": "epic-workshop",
  "private": true,
  "type": "module",
  "scripts": {
    "postinstall": "cd ./example && bun install --prefer-offline --no-audit --no-fund",
    "typecheck": "./other/nx-fallback.js run-many --target typecheck",
    "lint": "./other/nx-fallback.js lint",
    "build": "./other/nx-fallback.js run-many --target build",
    "prestart": "bun run build",
    "setup": "bun install && bun run validate",
    "go": "cross-env NODE_ENV=development EPICSHOP_CONTEXT_CWD=$PWD/packages/example bun watch $@",
    "start": "cross-env NODE_ENV=production bun run start --cwd example",
    "dev": "bun run start --cwd example",
    "warm": "bun run warm --cwd example",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "./other/nx-fallback.js test:e2e",
    "format": "./other/nx-fallback.js format:write",
    "validate": "./other/nx-fallback.js run-many --target build,typecheck,lint,test --parallel"
  },
  "author": "Kent C. Dodds <me@kentcdodds.com> (https://kentcdodds.com/)",
  "license": "GPL-3.0-only",
  "engines": {
    "node": ">=24.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@epic-web/config": "^1.21.0",
    "@nx/devkit": "^22.0.0",
    "@nx/eslint": "^22.0.0",
    "@nx/js": "^22.0.0",
    "@nx/playwright": "^22.0.0",
    "@nx/workspace": "^22.0.0",
    "@playwright/test": "^1.53.2",
    "@types/yargs": "^17.0.33",
    "cross-env": "^7.0.3",
    "dotenv": "^17.0.1",
    "eslint": "^9.30.1",
    "execa": "^9.6.0",
    "get-stream": "^9.0.1",
    "globby": "^14.1.0",
    "npm-run-all": "^4.1.5",
    "nx": "^22.0.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "react-router": "^7.9.4",
    "yargs": "^18.0.0",
    "yoctocolors": "^2.1.1"
  },
  "nx": {
    "includedScripts": []
  },
  "devDependencies": {
    "vitest": "^3.2.4"
  }
}
