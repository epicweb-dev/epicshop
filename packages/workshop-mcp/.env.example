# Sentry Configuration for MCP Server
# Copy this file to .env and fill in your actual values

# Required: Your Sentry DSN (Data Source Name)
# Get this from your Sentry project settings
SENTRY_DSN=https://your-sentry-dsn-here@sentry.io/your-project-id

# Optional: Environment name (defaults to NODE_ENV or 'development')
SENTRY_ENVIRONMENT=development

# Optional: Release version (defaults to npm package version)
SENTRY_RELEASE=1.0.0

# Optional: Performance monitoring sample rates (0.0 to 1.0)
# In production, you might want lower rates to reduce costs
SENTRY_TRACES_SAMPLE_RATE=1.0
SENTRY_PROFILES_SAMPLE_RATE=1.0