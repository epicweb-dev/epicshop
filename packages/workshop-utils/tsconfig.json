{
	"include": ["./src/**/*.ts", "./src/**/*.tsx", "./reset.d.ts"],
	"extends": ["@epic-web/config/typescript"],
	"compilerOptions": {
		"rootDir": "./src",
		"outDir": "./dist",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"rewriteRelativeImportExtensions": true
	},
	"exclude": ["**/*.test.ts", "**/*.test.tsx", "dist"]
}
