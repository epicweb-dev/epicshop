{
	"include": ["./**/*.ts", "./**/*.tsx"],
	"extends": ["@epic-web/config/typescript"],
	"compilerOptions": {
		"rootDir": "./src",
		"outDir": "./dist",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"paths": {
			"@epic-web/workshop-utils/*": [
				"../workshop-utils/src/*.ts",
				"../workshop-utils/src/*.tsx"
			]
		}
	},
	"exclude": ["dist"]
}
